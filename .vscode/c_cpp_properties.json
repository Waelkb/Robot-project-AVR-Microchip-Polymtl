{
    "version": 4,
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/app",         // app folder
                "${workspaceFolder}/lib",         // root of lib
                "${workspaceFolder}/lib/**",      // all subfolders of lib
                "/usr/avr/include/**"
            ],
            "defines": [
                "__AVR_ATmega324PA__"
            ],
            "compilerPath": "/usr/bin/avr-gcc",
            "cStandard": "c11",
            "cppStandard": "c++14",
            "intelliSenseMode": "gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools"
        },
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/app",         
                "${workspaceFolder}/lib",        
                "${workspaceFolder}/lib/**",      
                "/opt/homebrew/opt/avr-gcc@14/avr/include/**"
            ],
            "defines": [
                "__AVR_ATmega324PA__"
            ],
            "compilerPath": "/opt/homebrew/opt/avr-gcc@14/bin/avr-gcc",
            "cStandard": "c11",
            "cppStandard": "c++14",
            "intelliSenseMode": "gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ]
}